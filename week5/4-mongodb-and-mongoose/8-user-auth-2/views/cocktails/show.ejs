<main>
  <h1><%= name %></h1>
  <p>Ingredients:
    <% ingredients.forEach(ingredient => { %>
      <span class="tag"><%= ingredient %></span>
      <% }) %>
  </p>
  <img class="show-image" src="<%= image %>"/>
  <div class="buttons">
    <form action="/cocktails/<%= _id %>?_method=DELETE" method="post">
      <button class="button">Delete</button>
    </form>
    <a class="button" href="/cocktails/<%= _id %>/edit">Edit</a>
  </div>
</main>
