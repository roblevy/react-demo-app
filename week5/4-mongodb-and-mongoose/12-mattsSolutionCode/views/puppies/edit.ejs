<h2 class="title is-2">Add a Puppy</h2>

<form action="/puppies/<%= _id %>?_method=PUT" method="post">
  <div class="field">
    <label class="label is-size-4" for="name">Name</label>
    <input class="input is-info" type="text" name="name" value="<%= name %>">
  </div>

  <div class="field">
    <label class="label is-size-4" for="countryOfOrigin">Country of Origin</label>
    <input class="input is-info" type="text" name="countryOfOrigin" value="<%= countryOfOrigin %>">
  </div>

  <div class="field">
    <label class="label is-size-4" for="img">Image (URL)</label>
    <input class="input is-info" type="text" name="img" value="<%= img %>">
  </div>

  <button class="button is-rounded is-info">Submit</button>

</form>
