<div class="hero has-text-centered">
  <% if(locals.isLoggedIn) { %>
    <div class="hero-head">
      <div class="message is-info">
        <div class="message-body">
          <p>Welcome back <%= locals.currentUser.username %></p>
        </div>
      </div>
    </div>
  <% } %>

  <div class="hero-body">
    <h1 class="title is-1">Hello and Welcome to EJS Puppers!</h1>
    <h3 class="subtitle is-3">Click on Explore to have a look around</h3>
  </div>
</div>
